<link rel="stylesheet" href="/css/media-list.css">
<%- include('partials/deleteMedia.ejs') %>
    <div class="container">
        <h2 class="pb-2 border-bottom"><i class="fa-solid fa-book fa-lg"></i> Media Management</h2>
    </div>

    <div class="container">
        <div class="row align-items-end mb-3">
            <div class="col-md-2 mb-2">
                <label for="media-type-selector">Media Type: </label>
                <select id="media-type-selector" class="form-select" aria-label="size 3 select example">
                    <% for(let type of viewModel.mediaTypes) { %>
                        <option value="<%= type.id %>">
                            <%= type.name %>
                        </option>
                        <% } %>
                </select>
            </div>
            <div class="col-md-8 mb-2 text-center">
                <div class="input-group">
                    <input id="search-media-input" class="form-control" type="text" placeholder="Search Field">
                    <button id="search-btn" type="submit" class="btn btn-outline-primary"><i
                            class="fa-solid fa-magnifying-glass"></i></button>
                    <button id="clear-search-btn" type="reset" class="btn btn-outline-danger"><i
                            class="fa-solid fa-x"></i></button>
                </div>
            </div>
            <div class="col-md-2 mb-2 text-end">
                <% if(viewModel.isEmployee) { %>
                <a href="/media/createOrEdit/0" class="btn btn-primary btn-rounded delete-media-btn"> Add Media<i
                        class="fa-solid fa-plus"></i></a>
                <% } %>
            </div>
        </div>
    </div>
    <div class="container">
        <table id="media-table" class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">Title</th>
                    <th scope="col">Author</th>
                    <th scope="col">Publisher</th>
                    <th scope="col">Categories</th>
                    <th scope="col">available/total</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
    <script src="/js/media-list-view.js"></script>