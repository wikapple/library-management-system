<div class="container col-xxl-8 px-4 py-5">
  <div class="row flex-lg-row-reverse align-items-start g-5 py-5">
    <div class="d-none d-lg-block col-10 col-sm-8 col-lg-6">
      <img src="/images/iufw-library-books-cropped.png" class="d-block mx-lg-auto img-fluid rounded"
        alt="Bootstrap Themes" height="350"loading="lazy">
    </div>
    <div class="col-lg-6">
      <h1 class="display-5 fw-bold text-body-emphasis lh-1 mb-3">Register</h1>
      <% if (messages.error) {%>
        <p class="text-danger">
          <%=messages.error%>
        </p>
        <% } %>
          <form id="registerForm" class="form-signin auth-form container-fluid" action="/auth/member/register"
            method="POST">
            <div class="form-group mb-2">
              <label for="name">Name:</label>
              <input type="text" name="name" class="form-control" id="name" placeholder="Enter your name" required>
            </div>
            <div class="form-group mb-2">
              <label for="name">Phone Number:</label>
              <input type="tel" name="phone" class="form-control" id="phone" placeholder="Enter your phone number"
                required>
            </div>
            <div class="form-group mb-2">
              <label for="email">Email:</label>
              <input type="email" name="email" class="form-control" id="email" placeholder="Enter your email" required>
            </div>
            <div class="form-group mb-2">
              <label for="dob">Date of birth:</label>
              <input type="date" name="dob" class="form-control" id="dob" required>
            </div>
            <div class="form-group mb-2">
              <label for="password">Password:</label>
              <input type="password" name="password" class="form-control" id="password" aria-describedby="passwordHelp"
                placeholder="Enter your password" required minlength="4">
              <small id="passwordHelp" class="form-text text-muted">Minimum length 4 characters.</small>
            </div>
            <div class="form-group mb-3">
              <label for="passwordConfirmation">Confirm Password:</label>
              <input type="password" class="form-control" id="passwordConfirmation" placeholder="Confirm your password"
                required>
              <small id="error" class="form-text text-danger" style="display: none;">Passwords do not match!</small>
            </div>
            <div class="text-center">
              <button type="submit" class="btn btn-primary btn-block mb-3">Submit</button>
            </div>
          </form>

          <div class="text-center">
            <p>Already a member? <a href="/auth/Login">Login</a></p>
          </div>
    </div>
  </div>
</div>

<script src="/js/register.js"></script>